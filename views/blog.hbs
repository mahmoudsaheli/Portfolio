<div class="card blog-section p-4 mb-5">
  <h3 class="mb-4">All posts</h3>
  
  <p class="mb-4">
    Written by Nvi Mai who lives and works in Ontario, Canada building Websites/Applications.
  </p>

  {{#each posts}}
    <a href="/blog/{{@index}}" class="text-decoration-none text-dark">
      <div class="card mb-4 shadow-sm p-3">
        <h5 class="post-title">{{this.title}}</h5>
        <p class="post-date text-muted mb-2">{{this.date}}</p>
        <p class="post-excerpt">{{this.excerpt}}</p>
      </div>
    </a>
  {{/each}}
</div>
